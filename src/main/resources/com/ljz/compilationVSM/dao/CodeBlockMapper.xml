<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ljz.compilationVSM.dao.CodeBlockMapper">
    <select id="getQuestion" resultType="com.ljz.compilationVSM.entity.Choose">
        select id,title,choice0,choice1,choice2,choice3
        from choose
        order by rand()
            limit #{number}
    </select>
</mapper>
